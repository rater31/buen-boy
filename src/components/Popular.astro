import Cards1 from "./Cards1.astro"
---


<div class="container">
    <h1>POPULAR</h1>
    <Cards1 />
</div>

<style>
    .container {
        padding: 25px;
        justify-content: center;
        align-items: center;
    }
    h1 {
        font-size: 24px;
        margin: 0;
        animation: fadeIn 1s ease-in-out forwards ;
        animation-delay: 1s;
        opacity: 0;
    }
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
    
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>