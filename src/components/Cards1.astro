---
const response = await fetch(
  "https://opensheet.elk.sh/16Tuy39NSD_IbmLPSkecDI3qcwc4iX0ZgMuhWmXWz-9k/1"
);
const data = await response.json();
---
<div class="container">
    {data.filter((item) => item.Categoria === "popular").map((item) => (
      <div class="card-item">
        <img src={item.Imagen1} alt={item.nombre}  class="img-card"/>
        <h2>{item.nombre}</h2>
        <p>{item.description}</p>
      </div>
    ))}
</div>

<style>
  .container {
    display: flex;
    flex-wrap: nowrap;
    overflow: scroll;
    padding-top: 24px;
  }
  .card-item {
    border-radius: 5px;
    flex: 1 0 auto;
    margin: 0 10px 0 10px;
    width: 149px;
    height: 200px;
    background-color: #313131;
    animation: fadeIn 1s ease-in-out forwards;
    animation-delay: 1.5s;
    opacity: 0;

  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
