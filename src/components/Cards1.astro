---
const response = await fetch(
  "https://opensheet.elk.sh/16Tuy39NSD_IbmLPSkecDI3qcwc4iX0ZgMuhWmXWz-9k/1"
);
const data = await response.json();
---
<div class="container">
    {data.filter((item) => item.Categoria === "popular").map((item) => (
      <div class="card-item">
        <p class="precio">{item.Precio}</p>
        <img src={item.Imagen1} alt={item.Nombre}  class="img-card"/>
        <h2>{item.Nombre}</h2>
      </div>
    ))}
</div>

<style>
  .precio{
    font-size: 20px;
    margin-left: 5px;
  }
  .img-card{
    width: 50px;
    height: 50px;
    object-fit: cover;
    border-radius: 5px 5px 0 0;
  }
  h2{
    font-size: 16px;
    padding-left: 5px;
  }

  .container {
    height: auto;
    display: flex;
    flex-wrap: nowrap;
    overflow: scroll;
    padding-top: 24px;
  }
  .card-item {
    border-radius: 5px;
    flex: 1 0 auto;
    margin: 0 10px 0 10px;
    width: 149px;
    height: 300px;
    background-color: #313131;
    animation: fadeIn 1s ease-in-out forwards;
    animation-delay: 1.5s;
    opacity: 0;

  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
 <style/>